<div class="container">
  <div class="row"><!--支払方法欄-->
    <%= form_with model: @order, url: orders_check_path, local:true do |f| %>
    <h4>支払方法</h4>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%#=ひな型 f.radio_button :プロパティ名(キー), "送信データ" %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
      <%#ひな型 f.label :プロパティ名(キー), "表示する値" %>

      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

    <h4>お届け先</h4>
      <div>ご自身の住所</div>
      <%= f.radio_button :address_select, 0 %><!--自身の内容は0としてデータを送る-->
      〒<%= current_customer.postal_code %><%= current_customer.address %><%= current_customer.last_name %><%= current_customer.first_name %>

      <div>新しいお届け先</div>
      <%= f.radio_button :address_select, 1 %>
      郵便番号<%= f.text_field :postal_code %>
      <br>住所<%= f.text_field :address %>
      <br>宛名<%= f.text_field :address_name %>

      <!----既に決まっているデータの送信>
      <%= f.hidden_field :member_id, value: current_customer.id %><!--ログインユーザーID-->
      <%= f.hidden_field :postage, value: "300" %><!--送料-->

      <%= f.submit '確認画面へ進む', class: "ml-2 btn btn-success" %>
    <% end %>
  </div>

</div>