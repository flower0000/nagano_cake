<div class="container">

<h4>新規会員登録</h4>

<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"名前" %>
    （姓）<%= f.text_field :last_name, autofocus: true %>（名）<%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"フリガナ" %>
    （セイ）<%= f.text_field :last_name_kana, autofocus: true %>（メイ）<%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true, style:"width:50%" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>

<% end %>

<h4 class="mt-5">既に登録済みの方</h4>
<%= render "customers/shared/links" %>からログインしてください<!--render "customers/shared/links"は部分テンプレートですよ-->

</div>
