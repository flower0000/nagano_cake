<div class="container">

  <div class="row">
    <div class="col-lg-2" >
      <%= link_to "編集する", customers_edit_path, class: "mt-3 mb-3 btn btn-success" %>
    </div>
  </div>

<table class="table table-bordered">
    <tr>
      <td>
        会員ID
      </td>
      <td>
        <%= @customer.id %>
      </td>
    </tr>

    <tr>
      <td>
        氏名
      </td>
