<!--customer側会員情報編集画面-->
<div class="container">
 <h4>会員情報編集</h4>
 <table class="table table-borderless">
    <%= form_with model: @customer, url: customers_update_path, local:true do |f| %>
      <tr>
        <td>
          会員ID
        </td>
        <td>
          <%= @customer.id %>
        </td>
      </tr>

      <tr>
        <td>
          氏名
        </td>
        <td>
           <%= f.text_field :last_name %>　<%= f.text_field :first_name %>
        </td>
      </tr>

      <tr>
        <td>
          フリガナ
        </td>
        <td>
           <%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %>
        </td>
      </tr>

      <tr>
        <td>
          郵便番号
        </td>
        <td>
           <%= f.text_field :postal_code %>
        </td>
      </tr>

      <tr>
        <td>
          住所
        </td>
        <td>
           <%= f.text_field :address, style:"width:50%" %>
        </td>
      </tr>

      <tr>
        <td>
          電話番号
        </td>
        <td>
           <%= f.text_field :telephone_number %>
        </td>
      </tr>

      <tr>
        <td>
          メールアドレス
        </td>
        <td>
           <%= f.text_field :email %>
        </td>
      </tr>

      <tr>
        <td>

        </td>

        <td>
          <%= f.submit '編集内容を保存', class: "mt-3 btn btn-success" %><%= link_to "退会する", root_path, class:"mt-3 btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>