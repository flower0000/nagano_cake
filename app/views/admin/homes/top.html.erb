<!--注文履歴一覧-->
<div class="container">
  <h4>注文履歴一覧</h4>
  <div class="row">
    <table class="table table-hover table-bordered ">
     <thead style="background-color: silver;"><!--表のヘッダー-->
       <tr>
        <th class="header1">購入日時</th>
        <th class="header2">購入者</th>
        <th class="header3">注文個数</th>
       </tr>
     </thead>

     <tbody>
      <% @orders.each do |order| %>
       <tr>
         <td><%= order.created_at %></td>
         <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
         <td><%= order.order_details.count %></td>
       </tr>
      <% end %>
     </tbody>
   </table>
  </div>
</div>