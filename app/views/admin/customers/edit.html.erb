<!--ユーザー情報編集画面-->
<div class="container">
  <h4><%= @customer.last_name %><%= @customer.first_name %>の会員詳細</h4>
  <table class="table table-borderless">
    <%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>
      <tr>
        <td>
          会員ID
        </td>
        <td>
          <%= @customer.id %>
        </td>
      </tr>

      <tr>
        <td>
          氏名
        </td>
        <td>
           <%= f.text_field :last_name %>　<%= f.text_field :first_name %>
        </td>
      </tr>

      <tr>
        <td>
          フリガナ
        </td>
        <td>
           <%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %>
        </td>
      </tr>

      <tr>
        <td>
          郵便番号
        </td>
        <td>
           <%= f.text_field :postal_code %>
        </td>
      </tr>

      <tr>
        <td>
          住所
        </td>
        <td>
           <%= f.text_field :address, style:"width:50%" %>
        </td>
      </tr>

      <tr>
        <td>
          電話番号
        </td>
        <td>
           <%= f.text_field :telephone_number %>
        </td>
      </tr>

      <tr>
        <td>
          メールアドレス
        </td>
        <td>
           <%= f.text_field :email %>
        </td>
      </tr>

      <tr>
        <td>
          <%= f.submit '変更を保存', class: "mt-3 btn btn-success" %>
        </td>
      </tr>
    <% end %>
  </table>

</div>