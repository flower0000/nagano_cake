<!--会員詳細ページ-->
<div class="container">
   <h4><%= @customer.last_name %><%= @customer.first_name %>の会員詳細</h4>
  <table class="table table-borderless">
    <tr>
      <td>
        会員ID
      </td>
      <td>
        <%= @customer.id %>
      </td>
    </tr>

    <tr>
      <td>
        氏名
      </td>
      <td>
        <%= @customer.last_name %><%= @customer.first_name %>
      </td>
    </tr>

    <tr>
      <td>
        フリガナ
      </td>
      <td>
        <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
      </td>
    </tr>

    <tr>
      <td>
        郵便番号
      </td>
      <td>
        <%= @customer.postal_code %>
      </td>
    </tr>

    <tr>
      <td>
        住所
      </td>
      <td>
        <%= @customer.address %>
      </td>
    </tr>

    <tr>
      <td>
        電話番号
      </td>
      <td>
        <%= @customer.telephone_number %>
      </td>
    </tr>

    <tr>
      <td>
        メールアドレス
      </td>
      <td>
        <%= @customer.email %>
      </td>
    </tr>

    <tr>
      <td>
        会員ステータス
      </td>
      <td>
        <% if @customer.is_active == "kari" %>
          <div class="text-success">有効</div>
        <% else %>
          <div class="text-danger">退会</div>
        <% end %>
      </td>
    </tr>

  </table>

  <div class="row">

    <div class="col-lg-2" >
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "mt-3 btn btn-success" %>
    </div>

    <div class="col-lg-3">
      <%= link_to "注文履歴一覧を見る", admin_root_path, class: "mt-3 btn btn-primary" %>
  　</div>

  </div>
</div>